@model IEnumerable<Gameo.Domain.Branch>
@{
    ViewBag.Title = "Index";
}
<div class="container table-branch">
    @if (!Model.Any())
    {
        <div class="alert alert-block">
            <h4>
                No Branches Found!</h4>
            Only available branches will be listed down here. Click @Html.ActionLink("here", "Create", "Branch")
            to add new branch
        </div>
    }
    else
    { 
        <h3>Available Branches</h3>
        <p class="offset5">
            @Html.ActionLink("Create New Branch", "Create", "Branch", null, new { @class = "btn btn-primary" })
        </p>
        <table class="table table-striped table-hover span7">
            <tr>
                <th>
                    #
                </th>
                <th>
                    Branch Name
                </th>
            </tr>
            @for (var i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <td>@(i + 1)
                    </td>
                    <td>@Model.ElementAt(i).Name
                    </td>
                </tr>
            }
        </table>
    }
</div>
